<h1>Edit <%= @ski.name %></h1>

<form class="" action="/skis/<%= @ski.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= @ski.name %>"><br><br>
    
    <label for="brand">Brand:</label>
    <input type="text" name="brand" value=" <%= @ski.brand %>"><br><br>
    
    <label for="length">Length:</label>
    <input type="number" name="length" value="<%= @ski.length %>"><br><br>
    
    <label for="width">Width:</label>
    <input type="number" name="width" value="<%= @ski.width %>"><br><br>
    
    <label for="category">Category:</label>
    <input type="text" name="category" value="<%= @ski.category %>"><br><br>
    
    <input type="submit" value="Submit"><br><br>

    <a href="/skis">Return</a>
</form><br>